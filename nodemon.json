{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "notify-send 'App restarted due to:\n'$FILENAME''"
  },
  "watch": [
    "src/",
    "templates/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js html scss md"
}
